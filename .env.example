PORT=4000
CORS_ORIGIN=http://localhost:5173

# PostgreSQL Database URL
# For local development: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For Neon (hosted): Get from https://console.neon.tech - use the Prisma format
# Example Local: postgresql://postgres:postgres@localhost:5432/impara_news
# Example Neon: postgresql://username:password@ep-xxxxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/impara_news

JWT_SECRET=super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
NODE_ENV=development

# Allowed users (comma-separated emails) - Only these users can register and login
ALLOWED_USERS=admin@impara.com,user@impara.com
